CREATE database proyectoperegrino;

CREATE TABLE IF NOT EXISTS paciente (
	idPaciente INT AUTO_INCREMENT,
    pac_Nombres VARCHAR(50) NOT NULL,
    pac_Primer_Apellido VARCHAR(50) NOT NULL,
    pac_Segundo_Apellido VARCHAR(50) NOT NULL,
    pac_Nombre_Completo VARCHAR(200) NOT NULL,
    pac_CURP VARCHAR(40),
    pac_f_nacimiento DATE,
    pac_tipo VARCHAR(50) NOT NULL,
    pac_Email VARCHAR(50),
  	pac_Telefono VARCHAR (10),
    pac_Celular VARCHAR (10),
    pac_Estado_Civil VARCHAR(50),
    pac_Escolaridad VARCHAR(50),
    pac_Pais VARCHAR(50),
    pac_Sexo VARCHAR(50),
    pac_Estado VARCHAR(50),
    pac_Municipio VARCHAR(50),
    pac_Localidad VARCHAR(50),
    pac_dir_CP VARCHAR(50),
    pac_dir_calle VARCHAR(50),
    pac_dir_colonia VARCHAR(50),
    pac_dir_comentarios VARCHAR(50),
    pac_cant_adicionales INT,
    id_titular INT,
    Parentezco VARCHAR(50),
    user_reg VARCHAR(50),
    activo BOOLEAN,
    empresa VARCHAR(50),
    updated_at TIMESTAMPS,
    created_at TIMESTAMPS,

    PRIMARY KEY (idPaciente),
    FOREIGN KEY (id_titular) REFERENCES paciente (idPaciente)
);


CREATE TABLE IF NOT EXISTS doctor(
	idDoctor VARCHAR(50),
    doc_nombre VARCHAR(50),
    doc_primer_apellido VARCHAR(50),
    doc_segundo_apellido VARCHAR(50),
    doc_nombre_completo VARCHAR(200),
    doc_email VARCHAR (50),
    activo boolean,
    doc_cedula VARCHAR(50),
    doc_curp VARCHAR(50),
    doc_estado VARCHAR(50),
    doc_municipio VARCHAR(50),
    doc_dir_colonia VARCHAR(50),
    doc_dir_calle VARCHAR(50),
    doc_dir_numero VARCHAR(50),
    doc_dir_cp VARCHAR(50),
    doc_celular_principal VARCHAR(50),
    doc_horario_ini VARCHAR(50),
    doc_horario_fin VARCHAR(50),

    PRIMARY KEY (idDoctor),
);
